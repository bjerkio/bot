  },
  "dependencies": {
    "@pulumi/github": "^5.3.0",
    "@pulumi/pulumi": "^3.53.1",
    "get-pulumi-secret": "^2.0.0",
    "rotate-pulumi-secret": "^2.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^18.11.18"
  }
}
